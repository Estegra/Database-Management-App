<UserControl x:Class="Database_Management_App.Templates.Template1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Database_Management_App.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid>


        <Label  Content="Test" Foreground="White" Margin="10,0,0,0"
        BorderBrush="Transparent" Background="Transparent"  Width="65" 
        HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" />
        <Grid Width="175" Height="25" Margin="10,0,0,0">
            <TextBox  VerticalAlignment="Stretch"  Background="Transparent"
        FontSize="16" FontWeight="Light" BorderThickness="0" Margin="5,0,0,0"
        TextChanged="txt_Keyword_TextChanged"  Foreground="White"/>

            <Button  Width="30" HorizontalAlignment="Right"
        Background="Transparent" Foreground="LightGray" BorderThickness="0" Content="X"/>

            <TextBlock  Text="Test" 
        FontSize="16" FontWeight="Light" 
        Foreground="LightGray" VerticalAlignment="Stretch" Margin="8,0,0,0"
        Panel.ZIndex="-1" />
        </Grid>


    </Grid>
</UserControl>
